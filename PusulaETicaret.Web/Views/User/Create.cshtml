@model CreateUserViewModel
@{
    ViewData["Title"] = "Kullanıcı Oluştur";
}


<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-5 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row">
    <div class="col-4 offset-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger small"></div>
            <div class="form-group mb-3">
                <label asp-for="Fullname" class="form-label">Ad Soyad</label>
                <input asp-for="Fullname" class="form-control" placeholder="John Doe" />
                <span class="text-danger small" asp-validation-for="Fullname"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Username" class="form-label">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" placeholder="johndoe" />
                <span class="text-danger small" asp-validation-for="Username"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Şifre</label>
                <input type="password" asp-for="Password" class="form-control" placeholder="P@ssW*rd" />
                <span class="text-danger small" asp-validation-for="Password"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="RePassword" class="form-label">Şifre Tekrar</label>
                <input type="password" asp-for="RePassword" class="form-control" placeholder="P@ssW*rd" />
                <span class="text-danger small" asp-validation-for="RePassword"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Role" class="form-label">Rol</label>
                <select asp-for="Role" class="form-select">
                    <option value="">Lütfen seçiniz</option>
                    <option value="admin">Admin</option>
                    <option value="user">Kullanıcı</option>
                </select>
                <span asp-validation-for="Role" class="text-danger small"></span>
            </div>
            <div class="form-group mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" asp-for="Locked">
                    <label class="form-check-label" asp-for="Locked">
                        Hesabı Dondur
                    </label>
                </div>
            </div>
            <div class="form-group mb-3 ">
                <button type="submit" class="btn btn-primary"><i class="fa-solid fa-save me-2"></i>Kaydet</button>
            </div>
        </form>
    </div>
</div>