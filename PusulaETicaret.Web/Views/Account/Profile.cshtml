@{
    ViewData["Title"] = "Profil";
}
<div class="row">
    <div class="col-4 offset-4">
        <h1 class="display-4 border-bottom text-center pb-2">@ViewData["Title"]</h1>
    </div>
</div>

<div class="row mt-4">

    <div class="col-4 offset-4 my-3">
        <div class="mb-4">
            <div asp-validation-summary="All" class="text-danger small"></div>
        </div>
    </div>


    <div class="col-6">
        <form method="post" asp-action="ProfileChangeImage" enctype="multipart/form-data">
            <div class="text-center mb-3">
                <img width="125" src="~/profilephotos/@ViewData["ProfileImage"]" class="img-thumbnail rounded-circle" />
            </div>
            <div class="form-group mb-3">
                <label class="form-label small">Profil Resmi</label>

                <input type="file" name="file" class="form-control" accept="image/*" />
                <div class="text-secondary">
                    <span class="small">
                        <i class="fa fa-info-circle me-2"></i>
                        Image files
                    </span>
                </div>
                <div class="text-center mt-3"><button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Save</button></div>
            </div>
        </form>
    </div>

    <div class="col-6">

        <form method="post" asp-action="ProfileChangeFullname" class="mb-1">
            <div class="form-group">
                <label class="form-label small"><i class="fa-solid fa-arrows-rotate me-2"></i>Yeni Ad Soyad</label>
                <div class="input-group mb-3">
                    <input name="fullname" type="text" class="form-control" placeholder="John Doe" value="@ViewData["Fullname"]" />
                    <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Save</button>
                </div>
                @if (ViewData["result"] != null && ViewData["result"] == "NameChanged")
                {
                    <span class="text-success small">Ad Soyad değiştirildi.</span>
                }
            </div>
        </form>

        <form method="post" asp-action="ProfileChangePassword">
            <div class="form-group">
                <label class="form-label small"><i class="fa-solid fa-arrows-rotate me-2"></i>Yeni Şifre</label>
                <div class="input-group mb-3">
                    <input name="password" type="password" class="form-control" placeholder="P@ssW0rd!" />
                    <button class="btn btn-secondary" type="submit"><i class="fa-solid fa-floppy-disk me-2"></i>Save</button>
                </div>
                @if (ViewData["result"] != null && ViewData["result"] == "PasswordChanged")
                {
                    <span class="text-success small">Şifre değiştirildi.</span>
                }
            </div>
        </form>

    </div>
</div>